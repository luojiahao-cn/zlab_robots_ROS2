<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="zlab_robot_single_arm">
    <xacro:arg name="initial_positions_file" default="initial_positions.yaml" />

    <!-- Import zlab_robot_single_arm urdf file -->
    <xacro:include filename="$(find zlab_robot_description)/urdf/zlab_robot_single_arm.urdf.xacro" />

    <!-- Import control_xacro -->
    <xacro:include filename="zlab_robot_single_arm.ros2_control.xacro" />


    <xacro:zlab_robot_single_arm_ros2_control name="FakeSystem" initial_positions_file="$(arg initial_positions_file)"/>

</robot>
