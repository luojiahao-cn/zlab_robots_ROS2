<?xml version="1.0" encoding="utf-8"?>
<robot name="zlab_robot" xmlns:xacro="http://www.ros.org/wiki/xacro">

	<!-- 机械臂实例化参数 -->
	<xacro:arg name="arm_id" default="zlab_arm" />
	<xacro:arg name="parent_link" default="world" />
	<xacro:arg name="base_xyz" default="0 0 0" />
	<xacro:arg name="base_rpy" default="0 0 0" />
	

	<!-- 通用外观设置 -->
	<xacro:property name="link_material" value="silver" />
	<xacro:property name="link_color_rgba" value="0.89804 0.91765 0.92941 1" />

	<!-- 可复用的带惯量链接定义 -->
	<xacro:macro name="link_with_inertial" params="name xyz rpy mass ixx ixy ixz iyy iyz izz visual_mesh collision_mesh scale:='1 1 1'">
		<link name="${name}">
			<inertial>
				<origin xyz="${xyz}" rpy="${rpy}" />
				<mass value="${mass}" />
				<inertia ixx="${ixx}" ixy="${ixy}" ixz="${ixz}" iyy="${iyy}" iyz="${iyz}" izz="${izz}" />
			</inertial>
			<visual>
				<origin xyz="0 0 0" rpy="0 0 0" />
				<geometry>
					<mesh filename="${visual_mesh}" scale="${scale}" />
				</geometry>
						<material name="${link_material}">
							<color rgba="${link_color_rgba}" />
						</material>
			</visual>
			<collision>
				<origin xyz="0 0 0" rpy="0 0 0" />
				<geometry>
					<mesh filename="${collision_mesh}" scale="${scale}" />
				</geometry>
			</collision>
		</link>
	</xacro:macro>

	<!-- 机械臂宏定义 -->
		<xacro:macro name="zlab_robot_arm" params="arm_id:='zlab_arm' connected_to:='' base_xyz:='0 0 0' base_rpy:='0 0 0'">

		<xacro:unless value="${connected_to == ''}">
			<joint name="${arm_id}_joint_base" type="fixed">
				<parent link="${connected_to}" />
				<child link="${arm_id}_base0_link" />
				<origin xyz="${base_xyz}" rpy="${base_rpy}" />
			</joint>
		</xacro:unless>

		<xacro:link_with_inertial name="${arm_id}_base0_link"
			xyz="0.00022281 -3.2078E-06 0.11314"
			rpy="0 0 0"
			mass="50.058"
			ixx="0.87603"
			ixy="-2.9247E-05"
			ixz="9.7148E-05"
			iyy="0.87602"
			iyz="-1.6883E-06"
			izz="1.5353"
			visual_mesh="package://zlab_robot_description/meshes/collision/extra_base_link.STL"
			collision_mesh="package://zlab_robot_description/meshes/collision/extra_base_link.STL" />

		<xacro:link_with_inertial name="${arm_id}_base1_link"
			xyz="2.7756E-16 2.2204E-16 -0.008"
			rpy="0 0 0"
			mass="3.1592"
			ixx="0.0064529"
			ixy="-1.9807E-18"
			ixz="1.3186E-21"
			iyy="0.0064529"
			iyz="-1.7017E-21"
			izz="0.012771"
			visual_mesh="package://zlab_robot_description/meshes/collision/plant_link.STL"
			collision_mesh="package://zlab_robot_description/meshes/collision/plant_link.STL" />

		<joint name="${arm_id}_base0_to_base1" type="fixed">
			<parent link="${arm_id}_base0_link" />
			<child link="${arm_id}_base1_link" />
			<origin xyz="0 0 0.487" rpy="0 0 0" />
		</joint>

		<xacro:link_with_inertial name="${arm_id}_base2_link"
			xyz="-0.00031896 -0.00029673 0.042463"
			rpy="0 0 0"
			mass="1.6185"
			ixx="0.0030836"
			ixy="1.5354E-05"
			ixz="-1.9315E-05"
			iyy="0.0030825"
			iyz="-1.7918E-05"
			izz="0.0045209"
			visual_mesh="package://zlab_robot_description/meshes/visual/base_link.DAE"
			collision_mesh="package://zlab_robot_description/meshes/collision/base_link.STL" />

		<joint name="${arm_id}_base1_to_base2" type="fixed">
			<parent link="${arm_id}_base1_link" />
			<child link="${arm_id}_base2_link" />
			<origin xyz="0 0 0.0001" rpy="0 0 0" />
		</joint>

		<xacro:link_with_inertial name="${arm_id}_j1_link"
			xyz="5.0029E-07 -0.0040922 0.14629"
			rpy="0 0 0"
			mass="4.3771"
			ixx="0.010731"
			ixy="-8.0587E-09"
			ixz="-3.6773E-08"
			iyy="0.010408"
			iyz="0.00012853"
			izz="0.0081793"
			visual_mesh="package://zlab_robot_description/meshes/visual/j1_link.DAE"
			collision_mesh="package://zlab_robot_description/meshes/collision/j1_link.STL" />

		<joint name="${arm_id}_j1" type="revolute">
			<origin xyz="0 0 0" rpy="0 0 0" />
			<parent link="${arm_id}_base2_link" />
			<child link="${arm_id}_j1_link" />
			<axis xyz="0 0 1" />
			<limit lower="-3.0543" upper="3.0543" effort="150" velocity="3.15" />
			<calibration rising="0" falling="0" />
			<dynamics damping="0" friction="0" />
			<safety_controller soft_lower_limit="-3.0543" soft_upper_limit="3.0543" k_position="15" k_velocity="10" />
		</joint>

		<xacro:link_with_inertial name="${arm_id}_j2_link"
			xyz="-0.2125 -5.7643E-09 0.1346"
			rpy="0 0 0"
			mass="14.458"
			ixx="0.028392"
			ixy="-1.337E-07"
			ixz="-3.9895E-09"
			iyy="0.4559"
			iyz="4.214E-08"
			izz="0.44974"
			visual_mesh="package://zlab_robot_description/meshes/visual/j2_link.DAE"
			collision_mesh="package://zlab_robot_description/meshes/collision/j2_link.STL" />

		<joint name="${arm_id}_j2" type="revolute">
			<origin xyz="0 0 0.152" rpy="1.5708 0 0" />
			<parent link="${arm_id}_j1_link" />
			<child link="${arm_id}_j2_link" />
			<axis xyz="0 0 1" />
			<limit lower="-4.6251" upper="1.4835" effort="150" velocity="3.15" />
			<calibration rising="0" falling="0" />
			<dynamics damping="0" friction="0" />
			<safety_controller soft_lower_limit="-4.6251" soft_upper_limit="1.4835" k_position="15" k_velocity="10" />
		</joint>

		<xacro:link_with_inertial name="${arm_id}_j3_link"
			xyz="-0.18793 -8.4503E-07 0.0066357"
			rpy="0 0 0"
			mass="7.6737"
			ixx="0.0085096"
			ixy="2.1613E-06"
			ixz="-0.0068678"
			iyy="0.16971"
			iyz="3.7086E-08"
			izz="0.16854"
			visual_mesh="package://zlab_robot_description/meshes/visual/j3_link.DAE"
			collision_mesh="package://zlab_robot_description/meshes/collision/j3_link.STL" />

		<joint name="${arm_id}_j3" type="revolute">
			<origin xyz="-0.425 0 0" rpy="0 0 0" />
			<parent link="${arm_id}_j2_link" />
			<child link="${arm_id}_j3_link" />
			<axis xyz="0 0 1" />
			<limit lower="-2.8274" upper="2.8274" effort="150" velocity="3.15" />
			<calibration rising="0" falling="0" />
			<dynamics damping="0" friction="0" />
			<safety_controller soft_lower_limit="-2.8274" soft_upper_limit="2.8274" k_position="15" k_velocity="10" />
		</joint>

		<xacro:link_with_inertial name="${arm_id}_j4_link"
			xyz="4.98E-07 -0.003754 0.097155"
			rpy="0 0 0"
			mass="1.6266"
			ixx="0.00216"
			ixy="4.888E-09"
			ixz="3.1528E-08"
			iyy="0.0015455"
			iyz="3.7678E-05"
			izz="0.0019902"
			visual_mesh="package://zlab_robot_description/meshes/visual/j4_link.DAE"
			collision_mesh="package://zlab_robot_description/meshes/collision/j4_link.STL" />

		<joint name="${arm_id}_j4" type="revolute">
			<origin xyz="-0.39501 0 0" rpy="0 0 0" />
			<parent link="${arm_id}_j3_link" />
			<child link="${arm_id}_j4_link" />
			<axis xyz="0 0 1" />
			<limit lower="-4.6251" upper="1.4835" effort="28" velocity="3.2" />
			<calibration rising="0" falling="0" />
			<dynamics damping="0" friction="0" />
			<safety_controller soft_lower_limit="-4.6251" soft_upper_limit="1.4835" k_position="15" k_velocity="10" />
		</joint>

		<xacro:link_with_inertial name="${arm_id}_j5_link"
			xyz="-4.5588E-07 0.0038617 0.098257"
			rpy="0 0 0"
			mass="1.5812"
			ixx="0.0020612"
			ixy="8.7064E-09"
			ixz="-3.4742E-08"
			iyy="0.0014477"
			iyz="-2.8534E-05"
			izz="0.0019573"
			visual_mesh="package://zlab_robot_description/meshes/visual/j5_link.DAE"
			collision_mesh="package://zlab_robot_description/meshes/collision/j5_link.STL" />

		<joint name="${arm_id}_j5" type="revolute">
			<origin xyz="0 0 0.1021" rpy="1.5708 0 0" />
			<parent link="${arm_id}_j4_link" />
			<child link="${arm_id}_j5_link" />
			<axis xyz="0 0 1" />
			<limit lower="-3.0543" upper="3.0543" effort="28" velocity="3.2" />
			<calibration rising="0" falling="0" />
			<dynamics damping="0" friction="0" />
			<safety_controller soft_lower_limit="-3.0543" soft_upper_limit="3.0543" k_position="15" k_velocity="10" />
		</joint>

		<xacro:link_with_inertial name="${arm_id}_j6_link"
			xyz="7.7496E-05 1.7751E-05 0.076122"
			rpy="0 0 0"
			mass="0.52542"
			ixx="0.00027721"
			ixy="-1.8677E-09"
			ixz="-1.188E-07"
			iyy="0.00027839"
			iyz="2.2607E-07"
			izz="0.00041605"
			visual_mesh="package://zlab_robot_description/meshes/visual/j6_link.DAE"
			collision_mesh="package://zlab_robot_description/meshes/collision/j6_link.STL" />

		<joint name="${arm_id}_j6" type="revolute">
			<origin xyz="0 0 0.102" rpy="-1.5708 0 0" />
			<parent link="${arm_id}_j5_link" />
			<child link="${arm_id}_j6_link" />
			<axis xyz="0 0 1" />
			<limit lower="-3.0543" upper="3.0543" effort="28" velocity="3.2" />
			<calibration rising="0" falling="0" />
			<dynamics damping="0" friction="0" />
			<safety_controller soft_lower_limit="-3.0543" soft_upper_limit="3.0543" k_position="15" k_velocity="10" />
		</joint>

	</xacro:macro>

	<!-- Gazebo 传动宏 -->
	<xacro:macro name="gazebo-joint" params="joint ">
		<transmission name="trans_${joint}">
			<type>transmission_interface/SimpleTransmission</type>
			<joint name="${joint}">
				<hardwareInterface>hardware_interface/PositionJointInterface</hardwareInterface>
			</joint>
			<actuator name="${joint}_motor">
				<hardwareInterface>hardware_interface/PositionJointInterface</hardwareInterface>
				<mechanicalReduction>1</mechanicalReduction>
			</actuator>
		</transmission>
	</xacro:macro>

	<!-- 顶层结构：默认提供 world 链接，并实例化单臂 -->
	<link name="world" />

		<xacro:zlab_robot_arm arm_id="$(arg arm_id)"
								connected_to="$(arg parent_link)"
								base_xyz="$(arg base_xyz)"
								base_rpy="$(arg base_rpy)" />

	<xacro:gazebo-joint joint="$(arg arm_id)_j1" />
	<xacro:gazebo-joint joint="$(arg arm_id)_j2" />
	<xacro:gazebo-joint joint="$(arg arm_id)_j3" />
	<xacro:gazebo-joint joint="$(arg arm_id)_j4" />
	<xacro:gazebo-joint joint="$(arg arm_id)_j5" />
	<xacro:gazebo-joint joint="$(arg arm_id)_j6" />

	<gazebo>
		<plugin name="gazebo_ros_control" filename="libgazebo_ros_control.so" />
	</gazebo>

</robot>
